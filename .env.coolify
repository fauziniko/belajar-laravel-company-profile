# Environment Variables untuk Coolify

## Copy variabel di bawah ini ke Coolify Environment Variables

# Application Settings
APP_NAME="IT Solution"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database - SQLite (Default)
DB_CONNECTION=sqlite

# Jika menggunakan MySQL, uncomment dan isi:
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=company_profile
# DB_USERNAME=root
# DB_PASSWORD=your_secure_password

# Jika menggunakan PostgreSQL, uncomment dan isi:
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=company_profile
# DB_USERNAME=postgres
# DB_PASSWORD=your_secure_password

# Broadcasting, Cache, Session, Queue
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

